---
export const prerender = false;
import BannerCarousel from "@/components/banner-carousel";
import ProductCard from "@/components/product-card";
import Main from "@/layouts/main.astro";
import { BANNER_COLLECTION, pb, PRODUCT_COLLECTION } from "@/lib/pocketbase";
import "@/styles/global.css";
import { BadgePercentIcon, DollarSignIcon, HeadphonesIcon, TruckIcon } from "lucide-react";

const banners = await pb
  .collection(BANNER_COLLECTION)
  .getFullList({ perPage: 5 });

const latestProducts = await pb.collection(PRODUCT_COLLECTION).getList(1, 3, {
  fields: "id,name,gallery,price,slug,discount",
  sort: "-created",
});
---

<Main title="Trang chủ">
  <BannerCarousel client:load banners={banners} />
  <div class="max-w-6xl mx-auto px-2 md:px-0">
    <div class="h-16"></div>
    <section class="flex justify-between space-x-4">
      <div
        class="flex bg-gray-50 items-center justify-center gap-2 py-4 px-4 rounded-md flex-1"
      >
        <TruckIcon size={32} strokeWidth={1} />
        <div>
          <p class="font-semibold text-sm">Miễn phí vận chuyển</p>
          <p class="text-gray-500 text-xs">Contact us 24 hours a day</p>
        </div>
      </div>
      <div
        class="flex bg-gray-50 items-center justify-center gap-2 py-4 px-4 rounded-md flex-1"
      >
        <DollarSignIcon size={32} strokeWidth={1} />
        <div>
          <p class="font-semibold text-sm">Đổi trả & hoàn tiền</p>
          <p class="text-gray-500 text-xs">Contact us 24 hours a day</p>
        </div>
      </div>
      <div
        class="flex bg-gray-50 items-center justify-center gap-2 py-4 px-4 rounded-md flex-1"
      >
        <BadgePercentIcon size={32} strokeWidth={1} />
        <div>
          <p class="font-semibold text-sm">Giảm giá</p>
          <p class="text-gray-500 text-xs">Contact us 24 hours a day</p>
        </div>
      </div>
      <div
        class="flex bg-gray-50 items-center justify-center gap-2 py-4 px-4 rounded-md flex-1"
      >
        <HeadphonesIcon size={32} strokeWidth={1} />
        <div>
          <p class="font-semibold text-sm">Hỗ trợ 24/7</p>
          <p class="text-gray-500 text-xs">Contact us 24 hours a day</p>
        </div>
      </div>
    </section>
    <section>
      <div class="flex justify-between my-8">
        <h3 class="text-xl font-bold">Danh mục</h3>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 md:gap-6 gap-2"></div>
    </section>

    <section>
      <div class="flex justify-between my-8">
        <h3 class="text-xl font-bold">Mới nhất</h3>
        <a href="/" class="text-blue-500 font-semibold text-sm hover:underline"
          >xem thêm</a
        >
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 md:gap-6 gap-2">
        {
          latestProducts?.items?.map((item) => (
            <a href={`/san-pham/${item?.slug}`}>
              <ProductCard
                client:load
                id={item?.id}
                name={item?.name}
                thumbnail={item?.gallery[0]}
                price={item?.price}
                discount={item?.discount}
                slug={item?.slug}
              />
            </a>
          ))
        }
      </div>
    </section>

    <div class="h-16"></div>
  </div>
</Main>
