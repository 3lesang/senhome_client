---
export const prerender = false;
import {
  Breadcrumb,
  BreadcrumbItem,
  BreadcrumbList,
  BreadcrumbSeparator,
} from "@/components/ui/breadcrumb";
import Main from "@/layouts/main.astro";

const query = Astro.url.searchParams.get("q");
---

<Main title="Tìm kiếm">
