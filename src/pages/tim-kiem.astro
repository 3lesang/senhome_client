    <div class="max-w-6xl mx-auto py-4">
      <Breadcrumb className="mb-2">
        <BreadcrumbList>
          <BreadcrumbItem>
            <a href="/">Trang chủ</a>
          </BreadcrumbItem>
          <BreadcrumbSeparator />
          <BreadcrumbItem>Kết quả tìm kiếm "{query}"</BreadcrumbItem>
        </BreadcrumbList>
      </Breadcrumb>

      <div class="flex justify-between">
        <div class="flex-1"></div>
      </div>
      <div>
        <div class="grid grid-cols-4 gap-2">
