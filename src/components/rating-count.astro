---
import Star from "@lucide/astro/icons/star";

interface Props {
  ratings: { stars: number; count: number; percent: number }[];
}

const { ratings } = Astro.props;
---

<div class="space-y-1">
  {
    ratings.map(({ stars, count, percent }) => (
      <div class="flex items-center w-full">
        <a
          href="#"
          class="text-sm font-medium text-blue-600 dark:text-blue-500 hover:underline"
        >
          {stars} <Star size={10} class="inline fill-blue-500" />
        </a>

        <div class="w-2/4 h-1.5 mx-4 bg-gray-200 rounded-sm dark:bg-gray-700 flex-1">
          <div
            class="h-1.5 bg-blue-400 rounded-sm"
            style={`width: ${percent}%`}
          />
        </div>

        <span class="text-sm font-medium text-gray-500 dark:text-gray-400 min-w-8 text-left">
          {count}
        </span>
      </div>
    ))
  }
</div>
