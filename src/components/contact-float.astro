---
import IconZalo from "@/assets/icon-zalo.webp";
import IconTelPhone from "@/assets/tel-phone.png";
import { Image } from "astro:assets";
import { XIcon } from "lucide-react";
---

<div class="fixed end-4 bottom-4 z-99" x-data="{open: false}">
  <div class="flex flex-col items-center gap-4" x-cloak x-show="open">
    <a href="" class="flex items-center justify-center size-12 rounded-full">
      <Image
        height={100}
        width={100}
        class="w-full object-cover"
        src={IconZalo}
        alt=""
        loading="eager"
      />
    </a>
    <a href="" class="flex items-center justify-center size-10 rounded-full">
      <Image
        height={100}
        width={100}
        class="w-full object-center"
        src={IconTelPhone}
        loading="eager"
        alt=""
      />
    </a>
    <button
      type="button"
      x-on:click="open = false"
      class="flex items-center justify-center size-16 rounded-full cursor-pointer"
    >
      <XIcon className="" />
    </button>
  </div>
  <button
    x-show="!open"
    type="button"
    x-on:click="open = true"
    class="size-14 shadow-lg cursor-pointer rounded-full overflow-hidden border"
  >
    <Image
      height={100}
      width={100}
      src={IconZalo}
      loading="eager"
      alt="1"
      class="w-full object-cover"
    />
  </button>
</div>
<style>
  [x-cloak] {
    display: none;
  }
</style>
