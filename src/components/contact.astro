---
import IconZalo from "@/assets/icon-zalo.webp";
import IconTelPhone from "@/assets/tel-phone.png";
import { Image } from "astro:assets";
---

<div class="fixed end-4 lg:bottom-32 bottom-8 z-40">
  <div class="flex flex-col items-center gap-8">
    <a
      href="/"
      aria-label="Zalo"
      class="relative flex items-center justify-center size-10 rounded-full shadow-lg"
    >
      <Image
        height={100}
        width={100}
        class="w-full object-cover hover:scale-95 transition-all duration-150 peer"
        src={IconZalo}
        alt=""
        loading="eager"
      />
      <span
        class="hidden peer-hover:inline absolute end-0 w-max bg-black text-white text-sm rounded-md shadow right-full px-4 py-1"
        >Liện hệ qua Zalo</span
      >
    </a>

    <a
      href="tel:0933108680"
      aria-label="Phone"
      class="relative flex items-center justify-center size-8 rounded-full shadow-lg"
    >
      <Image
        height={100}
        width={100}
        class="w-full object-center hover:scale-95 transition-all duration-150 peer"
        src={IconTelPhone}
        loading="eager"
        alt=""
      />
      <span
        class="hidden peer-hover:inline absolute end-0 w-max bg-black text-white text-sm rounded-md shadow right-full px-4 py-1"
        >Gọi điện thoại</span
      >
    </a>
  </div>
</div>
<style>
  [x-cloak] {
    display: none;
  }
</style>
