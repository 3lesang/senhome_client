---
import { formatVND } from "@/lib/utils";
import { Image } from "astro:assets";
import { StarIcon } from "lucide-react";

interface Props {
  data?: {
    id?: string;
    thumbnail?: string;
    discount?: number;
    price?: number;
    name?: string;
    slug?: string;
  };
}

const { data } = Astro.props;
---

<article x-data>
  <div class="rounded overflow-hidden relative group">
    <Image
      width={100}
      height={100}
      src={data?.thumbnail ?? "/"}
      loading="lazy"
      decoding="async"
      alt={data?.name ?? "product_image"}
      class="aspect-square w-full bg-gray-200 object-cover group-hover:scale-105 xl:aspect-1/1 transition-all duration-300 ease-in-out"
    />
  </div>

  <div class="mt-4 space-y-2">
    <p class="line-clamp-2 group-hover:text-gray-600">{data?.name}</p>

    <div class="flex items-center gap-2 flex-wrap">
      {
        Number(data?.discount) > 0 && (
          <span class="px-2 py-1 rounded bg-blue-600 text-white text-xs font-bold">
            -{Number(data?.discount) * 100}%
          </span>
        )
      }
      <p class="text-lg font-bold">
        {
          formatVND(
            Number(data?.price) -
              Number(data?.price) * (Number(data?.discount) || 0)
          )
        }
      </p>

      {
        Number(data?.discount) > 0 && (
          <p class="text-gray-500 line-through">
            {formatVND(Number(data?.price))}
          </p>
        )
      }
    </div>
    <div class="text-xs space-x-1">
      <StarIcon className="fill-blue-500 text-blue-500 inline" size={14} />
      <span class="font-bold">4.8</span>
      <span class="text-gray-700">
        {new Intl.NumberFormat("en-US").format(2300)} đánh giá
      </span>
    </div>
    <button
      @click="$store.notification.triggerNotification('App was updated to the latest version!', 'neutral', '#')"
      type="button"
      type="button"
      class="bg-black rounded w-full cursor-pointer text-white flex items-center justify-center gap-2 whitespace-nowrap px-4 py-2 text-center text-sm font-medium tracking-wide text-on-primary transition hover:opacity-75 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary active:opacity-100 active:outline-offset-0 dark:bg-primary-dark dark:text-on-primary-dark dark:focus-visible:outline-primary-dark rounded-radius"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 16 16"
        fill="currentColor"
        aria-hidden="true"
        class="size-3.5"
      >
        <path
          fill-rule="evenodd"
          d="M5 4a3 3 0 0 1 6 0v1h.643a1.5 1.5 0 0 1 1.492 1.35l.7 7A1.5 1.5 0 0 1 12.342 15H3.657a1.5 1.5 0 0 1-1.492-1.65l.7-7A1.5 1.5 0 0 1 4.357 5H5V4Zm4.5 0v1h-3V4a1.5 1.5 0 0 1 3 0Zm-3 3.75a.75.75 0 0 0-1.5 0v1a3 3 0 1 0 6 0v-1a.75.75 0 0 0-1.5 0v1a1.5 1.5 0 1 1-3 0v-1Z"
          clip-rule="evenodd"></path>
      </svg>
      Thêm vào giỏ hàng
    </button>
  </div>
</article>
